<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_blue">

    <LinearLayout
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/file"/>

        <TextView
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="14dp"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:gravity="center|left"
            android:text="Create To Do List"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/container_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/create_SUN"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="SUN"
                android:textColor="@color/colorRed"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/create_MON"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="MON"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/create_TUE"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="TUE"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/create_WED"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="WED"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/create_THU"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="THU"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/create_FRI"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="FRI"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/create_SAT"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="SAT"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/create_title"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Title"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textSize="30sp"
            android:textColor="#000"/>

        <Button
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:id="@+id/create_confirm"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/check"/>

    </LinearLayout>

</LinearLayout>